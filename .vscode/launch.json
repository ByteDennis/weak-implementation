    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Remote Python: Current File (portforward)",
            "type": "debugpy",
            "request": "attach",
            "connect": { "host": "localhost", "port": 5680 },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/home/dennisl/remote/SkWeak/"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "Debug Python Remote (portforward)"
        }
    ],
}